<!-- app/views/posts/show.html.erb -->
<div class="GoBack">
<%= link_to image_tag('arrow.png', class: 'back-img'), posts_path %>
</div>
<h1 class="post_display"> <%= @post.title %></h1>



<div class="postpage">
<p><%= @post.content %></p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p class="comment"><%= comment.content %></p>
<% end %>
<% if logged_in? %>
  <h2>Create a new comment</h2>
  <%= form_with model: [@post, @comment], url: post_comments_path(@post) do |form| %>
    <%= form.label :content %><br>
    <%= form.text_area :content, class: 'commentfield' %><br>
    <%= form.submit 'Create Comment', class: 'button' %>
  <% end %>
<% end %>
</div>


