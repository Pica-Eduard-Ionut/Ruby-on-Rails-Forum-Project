<h1>Edit Post</h1>

<%= form_with(model: [@category, @post], url: post_path(@post), method: :patch) do |form| %>

  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :content %>
  <%= form.text_area :content %>

  <%= form.submit 'Update Post', class: 'btn' %>
<% end %>

<%= link_to 'Back', post_path(@post), class: 'btn' %>
