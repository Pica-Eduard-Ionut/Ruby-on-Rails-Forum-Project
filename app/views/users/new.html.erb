
  <div class="container">
  <div class="registerform">
<h1>Register</h1>

<%= form_with model: @user, url: users_path do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name, id: 'name' %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email, id: 'name' %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password, id: 'name' %>
  </div>

  <div>
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation, id: 'name' %><br><br>
  </div>

  <div>
    <%= form.submit 'Register', class: 'register_button' %>
  </div>
<% end %>
</div>
</div>

